{
  "name": "@isyfact/isy-angular-widgets",
  "version": "0.0.0",
  "description": "contains specific widgets for the development of apps in the public sector and applies the default Isyfact Theme.",
  "author": {
    "name": "IsyFact-Team",
    "email": "isyfact@bva.bund.de",
    "url": "https://www.bva.bund.de"
  },
  "license": "Apache-2.0",
  "homepage": "http://isyfact.de",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build isy-angular-widgets && ng build isy-angular-widgets-demo && npm run build:schematics",
    "build:widgets_lib": "ng build isy-angular-widgets && npm run build:schematics && npm run postbuild",
    "build-and-pack:widgets_lib": "npm run build:widgets_lib && npm run pack:widgets_lib",
    "build:widgets_demo": "ng build isy-angular-widgets-demo --base-href=/isy-angular-widgets/",
    "build:schematics": "tsc -p ./projects/isy-angular-widgets/tsconfig.schematics.json",
    "postbuild": "cd ./projects/isy-angular-widgets && copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../dist/isy-angular-widgets/",
    "pack:widgets_lib": "cd dist/isy-angular-widgets && npm pack",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "lint": "ng lint",
    "e2e": "npx testcafe chrome:headless ./projects/isy-angular-widgets-demo/src/test/e2e/*",
    "compodoc:build": "compodoc -p tsconfig.doc.json -d ./docs --disablePrivate --disableInternal",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -d ./docs -s --disablePrivate --disableInternal",
    "compodoc:serve": "compodoc -s -d ./docs",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "prettier": "@isyfact/prettier-plugin",
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@primeuix/themes": "^2.0.3",
    "chart.js": "^4.5.1",
    "flag-icons": "^7.5.0",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.1.1",
    "quill": "^2.0.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.2",
    "@angular-eslint/builder": "21.2.0",
    "@angular-eslint/eslint-plugin": "21.2.0",
    "@angular-eslint/eslint-plugin-template": "^21.2.0",
    "@angular-eslint/schematics": "21.2.0",
    "@angular-eslint/template-parser": "21.2.0",
    "@angular/cli": "~21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@compodoc/compodoc": "^1.2.1",
    "@isyfact/eslint-plugin": "4.1.0",
    "@isyfact/prettier-plugin": "1.0.0",
    "@ngneat/spectator": "^22.1.0",
    "@types/jasmine": "~6.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-jsdoc": "^62.5.0",
    "jasmine-core": "~6.0.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "~2.2.0",
    "moment": "^2.30.1",
    "ng-packagr": "^21.1.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3"
  }
}
