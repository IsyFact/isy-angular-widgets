{
  "name": "@isyfact/isy-angular-widgets",
  "version": "0.0.0",
  "description": "contains specific widgets for the development of apps in the public sector and applies the default Isyfact Theme.",
  "author": {
    "name": "IsyFact-Team",
    "email": "isyfact@bva.bund.de",
    "url": "https://www.bva.bund.de"
  },
  "license": "Apache-2.0",
  "homepage": "http://isyfact.de",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build isy-angular-widgets && ng build isy-angular-widgets-demo && npm run build:schematics",
    "build:widgets_lib": "ng build isy-angular-widgets && npm run build:schematics && npm run postbuild",
    "build-and-pack:widgets_lib": "npm run build:widgets_lib && npm run pack:widgets_lib",
    "build:widgets_demo": "ng build isy-angular-widgets-demo --base-href=/isy-angular-widgets/",
    "build:schematics": "tsc -p ./projects/isy-angular-widgets/tsconfig.schematics.json",
    "postbuild": "cd ./projects/isy-angular-widgets && copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../dist/isy-angular-widgets/",
    "pack:widgets_lib": "cd dist/isy-angular-widgets && npm pack",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "lint": "ng lint",
    "e2e": "npx testcafe chrome:headless ./projects/isy-angular-widgets-demo/src/test/e2e/*",
    "compodoc:build": "compodoc -p tsconfig.doc.json -d ./docs --disablePrivate --disableInternal",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -d ./docs -s --disablePrivate --disableInternal",
    "compodoc:serve": "compodoc -s -d ./docs",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.4",
    "@angular/cdk": "^18.1.4",
    "@angular/common": "^18.1.4",
    "@angular/compiler": "^18.1.4",
    "@angular/core": "^18.1.4",
    "@angular/forms": "^18.1.4",
    "@angular/platform-browser": "^18.1.4",
    "@angular/platform-browser-dynamic": "^18.1.4",
    "@angular/router": "^18.1.4",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "chart.js": "^4.4.3",
    "flag-icons": "^7.2.3",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^18.0.2",
    "@primeng/themes": "^18.0.2",
    "quill": "^2.0.2",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.3",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.4",
    "@angular-eslint/builder": "18.2.0",
    "@angular-eslint/eslint-plugin": "18.2.0",
    "@angular-eslint/eslint-plugin-template": "^18.2.0",
    "@angular-eslint/schematics": "18.2.0",
    "@angular-eslint/template-parser": "18.2.0",
    "@angular/cli": "~18.1.4",
    "@angular/compiler-cli": "^18.1.4",
    "@compodoc/compodoc": "^1.1.25",
    "@isyfact/eslint-plugin": "2.0.0",
    "@ngneat/spectator": "^19.0.0",
    "@stylistic/eslint-plugin-ts": "^2.6.2",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.0",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-jsdoc": "^50.0.1",
    "jasmine-core": "~5.2.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "moment": "^2.30.1",
    "ng-mocks": "^14.13.0",
    "ng-packagr": "^18.1.0",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.4"
  }
}
